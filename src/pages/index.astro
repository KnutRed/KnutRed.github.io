---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>Knut Rothe</title>
  </head>
  <body class="min-h-screen flex justify-center">
    <Header />

    <main class=" my-auto p-5">
      <div class="flex flex-col justify-center items-center">
        <!--TODO: exchange div to img of me -->
        <div class="size-40 bg-lime-500"></div>
        <p class="pt-5 max-w-2xl text-xl text-center">
          Vielseitig | Medien-Informatiker |<br /> Landessprecher der Linksjugend
          [solid’] Thüringen |<br /> SMM des Kinofilms: “Johnny & Me”
        </p>
      </div>
    </main>

    <Footer />
  </body>
</html>
<style is:global>
  /* Tailwind */
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @font-face {
    font-family: "GeistVariableVF";
    src: url("/fonts/GeistVariableVF.woff2") format("truetype");

    font-family: "GeistMonoVariableVF";
    src: url("/fonts/GeistMonoVariableVF.woff2") format("truetype");
  }

  @layer base {
    html {
      font-family: "GeistMonoVariableVF", system-ui, sans-serif;
    }
    body {
      @apply bg-amber-300;
      @apply dark:bg-slate-500;
    }

    p {
      @apply text-slate-900;
      @apply dark:text-slate-100;
    }
  }
</style>
