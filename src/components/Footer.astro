---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="">
  <a
    onmousedown="navigator.vibrate(100)"
    ontouchstart="navigator.vibrate(100)"
    href={translatePath("/projekte/")}
    class="absolute bottom-5 left-5 animate-none text-left text-4xl font-black text-slate-500 hover:no-underline dark:text-amber-300"
  >
    {t("nav.proj")}
    <br />
    {t("nav.jekte")}
  </a>
  <a
    onmousedown="navigator.vibrate(100)"
    ontouchstart="navigator.vibrate(100)"
    href={translatePath("/kontakt/")}
    class="absolute bottom-5 right-5 animate-none text-right text-4xl font-black text-slate-500 hover:no-underline dark:text-amber-300"
  >
    {t("nav.kon")}
    <br />
    {t("nav.takt")}
  </a>
</footer>
