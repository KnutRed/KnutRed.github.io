---
import { getLangFromUrl, useTranslatedPath } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
---

<header class="">
  <a
    onmousedown="navigator.vibrate(100)"
    ontouchstart="navigator.vibrate(100)"
    href={translatePath("/")}
    class="absolute left-5 top-5 animate-none text-left text-4xl font-black text-slate-500 hover:no-underline dark:text-amber-300"
  >
    Kn<br />
    ut
  </a>
  <a
    onmousedown="navigator.vibrate(100)"
    ontouchstart="navigator.vibrate(100)"
    href={translatePath("/")}
    class="absolute right-5 top-5 animate-none text-right text-4xl font-black text-red-400 hover:no-underline"
  >
    Rot<br />
    he
  </a>
</header>
